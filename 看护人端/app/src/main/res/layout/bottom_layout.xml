<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/bottom_background"
    android:layout_gravity="bottom">
    <LinearLayout
        android:id="@+id/tab_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/home_selector"
            android:backgroundTint="@color/color_selector"
            />
        <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="首页"
            android:textColor="@color/color_selector"
            android:gravity="center"
            android:textSize="15sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/tab_message"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/message"
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:background="@drawable/message_selector"
            android:backgroundTint="@color/color_selector" />
        <TextView
            android:id="@+id/text_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="消息"
            android:textColor="@color/color_selector"
            android:gravity="center"
            android:textSize="15sp"/>

    </LinearLayout>
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/call_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bottom_mic"
        android:backgroundTint="@color/green_blue"
        android:foreground="@drawable/ic_baseline_mic_none_24"
        android:foregroundTint="@color/white"
        />

</LinearLayout>

    <LinearLayout
        android:id="@+id/tab_old_people"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/old_people"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/old_people_selector"
            android:backgroundTint="@color/color_selector"
            />
        <TextView
            android:id="@+id/text_old_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="老人信息"
            android:textColor="@color/color_selector"
            android:gravity="center"
            android:textSize="15sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/tab_facility"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/facility"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/facility_selector"
            android:backgroundTint="@color/color_selector"
            />
        <TextView
            android:id="@+id/text_facility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设备情况"
            android:textColor="@color/color_selector"
            android:gravity="center"
            android:textSize="15sp"/>

    </LinearLayout>
</LinearLayout>